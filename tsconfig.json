{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "target": "esnext",
    "moduleResolution": "node",
    "module": "esnext",
    "lib": ["DOM", "ESNext"],
    "importHelpers": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": ["vitest/globals"],
    "typeRoots": ["@types", "node_modules/@types"]
  }
}
